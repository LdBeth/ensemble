USE_OCAMLFIND = false

include Files

OCamlLibrary(libenscore, $(ENSCORE_FILES))

BYTE_ENABLED = true
NATIVE_ENABLED = false
OCAML_LIB_FLAGS += -linkall
OCAML_LINK_FLAGS += -linkall

#
# Configuration
#
if $(not $(defined CAMLLIB))
    CAMLLIB = $(dir $(getenv CAMLLIB, $(getenv OCAMLLIB, $(shell $(OCAMLC) -where))))
    INCLUDES += $(CAMLLIB)
    export

if $(not $(defined USE_CIOVEC))
    USE_CIOVEC = true
    export

.PHONY: clean realclean
CLEAN = rm -rf *.cm* *~ .\#* *.o *.obj *.a *.lib *.exe *.omc *.tmp


ensemble.mli:
    tools/emrg -mli $(ENSEMBLEMLI) -o $@
ensemble.ml:
    tools/emrg -ml $(ENSEMBLEMLI) -o $@
